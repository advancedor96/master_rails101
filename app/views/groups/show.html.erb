<div class="col-md-12">
	<div>
		<%= link_to("Edit", edit_group_path(@group), class: "btn btn-primary pull-right") %>
		<%= link_to("發布新文章", new_group_post_path(@group), class: "btn btn-primary pull-right") %>
	</div>

	<h2><%= @group.title %></h2>
	<p><%= @group.description %></p>

	<table class="table">
		<tr>
			<th>文章</th>
			<th>操作</th>
		</tr>
		<% @posts.each do |post| %>
		<tr>
			<td><%= post.content %></td>
			<td><%= link_to("Edit", edit_group_post_path(@group, post)) %> | <%= link_to("Delete", group_post_path(@group, post), :method => :delete, data: {confirm: "Are you sure?"}) %></td>
		</tr>
		<% end %>
	</table>


</div>