<div class="col-md-12">
	<div>
		<%= link_to("New group", new_group_path, class: "btn btn-primary pull-right") %>
	</div>

	<table class="table">
		<th>#</th>
		<th>Title</th>
		<th>Description</th>
		<th>操作</th>


		<% @groups.each do |group| %>
			<tr>
				<td><%= group.id %></td>
				<td><%= link_to(group.title, group_path(group)) %></td>
				<td><%= group.description %></td>
				<td><%= link_to("Edit", edit_group_path(group)) %> | 
<%= link_to("Delete", group_path(group), method: :delete, data: {confirm: "Are you sure?" }) %></td>
			</tr>
		<% end %>

	</table>
</div>
